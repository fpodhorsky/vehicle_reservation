{% extends 'base.html.twig' %}
{% block title %}Přihlásit{% endblock %}
{% block body %}
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Přihlásit se</h1>
            <label for="inputEmail">E-mail</label>
            <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" required autofocus>
            <label for="inputPassword">Heslo</label>
            <input type="password" name="_password" id="inputPassword" class="form-control" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="mt-3">
                <button class="btn btn-success" type="submit">
                    Přihlásit se
                </button>
                <a class="btn btn-danger float-right" href="{{ path('app_security_register') }}">Registrovat se</a>
            </div>
        </form>
{% endblock %}